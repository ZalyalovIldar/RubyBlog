<!DOCTYPE html>
<html>
<head>
  <title>Super awesome blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="style-<%= current_user.try(:style) %>">
  <div class="row">
    <% if user_signed_in? %>
      <%= render "layouts/#{current_user.style}" %>
    <% else %>
      <%= render "layouts/default" %>
    <% end %>
  </div>
</body>
</html>
